---
import "../../node_modules/creditdesign-svelte-components/index.css";
import "../../node_modules/nature-immersive-svelte-components/static/css/light.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VideoHeader from "../components/VideoHeader.svelte";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<VideoHeader client:load/>
	<Header />
	<div class="center stack">
	<h1>{title}</h1>
		<slot />
	</div>
	<Footer />
	</body>
</html>
